            <SolidColorBrush x:Key="ColorGreen" Color="#4CAF50"/>
            <SolidColorBrush x:Key="ColorRed" Color="#F44336"/>
            <SolidColorBrush x:Key="ColorOrange" Color="#FF9800"/>
            <SolidColorBrush x:Key="ColorBlue" Color="#80B9EE"/>
            <SolidColorBrush x:Key="ColorWhite" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ColorBlack" Color="#000000"/>
