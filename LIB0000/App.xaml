            <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">

                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsEnabled" Value="True"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="IsManipulationEnabled" Value="True"/>
                <Setter Property="AlternatingRowBackground" Value="#343434"/>
                <Setter Property="RowBackground" Value="#343434"/>
                <Setter Property="HorizontalGridLinesBrush" Value="DimGray"/>
                <Setter Property="VerticalGridLinesBrush" Value="DimGray"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="BorderBrush" Value="#343434"/>
                <Setter Property="Background" Value="#343434"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="FontSize" Value="{DynamicResource LargeFontSize}"/>
                <Style.Resources>


                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#272727"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Foreground" Value="White"/>

                    </Style>

                    <Style TargetType="DataGridRow">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="40"/>

                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="40"/>


                    </Style>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="40" />
                    </Style>

                </Style.Resources>
            </Style>

            <Style TargetType="ScrollBar">
                <Setter Property="Width" Value="40"/>
            </Style>

            <Style TargetType="Image">

                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="MaxHeight" Value="580"/>

            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Dictionaries/FontsDictionary.xaml"/>
                <ResourceDictionary Source="Dictionaries/NederlandsResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>
