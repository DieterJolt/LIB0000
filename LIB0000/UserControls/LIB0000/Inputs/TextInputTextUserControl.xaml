<UserControl x:Class="LIB0000.TextInputTextUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0"
                   Text="{Binding TextLeft,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="{DynamicResource LargeFontSize}"/>
        <TextBox   Grid.Column="1" Grid.Row="0"
                   Text="{Binding Input,RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Foreground="White"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     FontSize="{DynamicResource LargeFontSize}"/>
        <TextBlock Grid.Column="3" Grid.Row="0"
                   Text="{Binding TextRight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="{DynamicResource LargeFontSize}"/>
    </Grid>
</UserControl>
