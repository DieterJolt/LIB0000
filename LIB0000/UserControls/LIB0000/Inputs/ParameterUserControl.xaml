<UserControl x:Class="VAN0001.ParameterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:VAN0001"
             mc:Ignorable="d"  
             d:DesignHeight="50" d:DesignWidth="400" HorizontalAlignment="Stretch" Margin="0,0,25,0"  >

    <Grid x:Name="gridMain">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Label Grid.Column="0" Margin="10,0,10,0" Content="{Binding LabelName,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   Foreground="White"  VerticalAlignment="Center" Grid.ColumnSpan="2" />
        <TextBox Grid.Column="2" MinWidth="75" MaxWidth="100" Text="{Binding LabelText,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     Foreground="White"  LostFocus="TextBox_LostFocus" VerticalAlignment="Center" Margin="10,10,10,10"/>
        <Label Grid.Column="3" Content="{Binding LabelUnitText,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"  VerticalAlignment="Center" />

        <local:ButtonUserControl Grid.Column="4" Margin="1,1,1,1"
                         Value="{Binding LabelText,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MinValue="{Binding MinValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxValue="{Binding MaxValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         StepValue="{Binding Value,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         StepBigValue="{Binding StepBigValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Icon="Minus"
                         Substract="True"
                         IconColor="Red"
                                 />

        <local:ButtonUserControl Grid.Column="5" Margin="1,1,1,1"
                                 Value="{Binding LabelText,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinValue="{Binding MinValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MaxValue="{Binding MaxValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 StepValue="{Binding Value,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 StepBigValue="{Binding StepBigValue,RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Icon="Plus"
                                 Substract="False"
                                 IconColor="Green"/>




    </Grid>
</UserControl>
