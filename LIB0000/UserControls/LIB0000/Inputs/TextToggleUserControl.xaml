<UserControl x:Class="LIB0000.TextToggleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0"
                   Text="{Binding TextLeft,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="{DynamicResource LargeFontSize}"/>
        <ui:ToggleSwitch Grid.Column="1" Grid.Row="0"
                     OffContent="{Binding TextToggleOff,RelativeSource={RelativeSource AncestorType=UserControl}}"
                     OnContent="{Binding TextToggleOn,RelativeSource={RelativeSource AncestorType=UserControl}}"
                     IsChecked="{Binding ToggleIsChecked,RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Foreground="White"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     FontSize="{DynamicResource LargeFontSize}"/>

    </Grid>
</UserControl>
