<UserControl x:Class="LIB0000.TextInputClearButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        


        <TextBlock Grid.Column="0" Grid.Row="0"
                   Text="{Binding TextLeft,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="{DynamicResource LargeFontSize}"/>
        <Border  BorderThickness="1" CornerRadius="5" Grid.Column="1" Grid.Row="0">
            <Grid>
                <TextBox Padding="5" 
                 Text="{Binding Input,RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Foreground="White"
                 IsEnabled="False"
                 FontSize="{DynamicResource LargeFontSize}"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"/>

                <Button Content="X" Foreground="Gray" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="Button_Click"/>
            </Grid>
        </Border>
        <local:ButtonImageUserControl Grid.Column="3" Grid.Row="0"
                    Button1Text="{Binding TextRight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Button1Command="{Binding CommandRight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Button1Image="{Binding ImageRight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Button1Visibility="{Binding VisibilityRight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   
                                      />
                    
    </Grid>
</UserControl>
