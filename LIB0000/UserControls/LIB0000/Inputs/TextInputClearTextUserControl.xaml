<UserControl x:Class="LIB0000.TextInputClearTextUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LIB0000"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0"
                Text="{Binding TextLeft,RelativeSource={RelativeSource AncestorType=UserControl}}"
                Foreground="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="{DynamicResource LargeFontSize}"/>
        <Border  BorderThickness="1" CornerRadius="5" Grid.Column="1" Grid.Row="0">
            <Grid>
                <TextBox Padding="5" 
              Text="{Binding Input,RelativeSource={RelativeSource AncestorType=UserControl},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
              Foreground="White"
              FontSize="{DynamicResource LargeFontSize}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              VerticalContentAlignment="Center"
              FontFamily="{Binding FontFamilyInput,RelativeSource={RelativeSource AncestorType=UserControl},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>

                <Button Content="X" Foreground="Gray" 
             HorizontalAlignment="Right"
             VerticalAlignment="Center"
             Background="Transparent"
             BorderThickness="0"
             Click="Button_Click"/>
            </Grid>
        </Border>

        <!--Nodig voor de dikte van de button-->
        <local:ButtonImageUserControl Grid.Column="3" Grid.Row="0"/>
        <local:ButtonImageUserControl Grid.Column="2" Grid.Row="0"/>

    </Grid>
</UserControl>
