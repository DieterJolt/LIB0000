<UserControl x:Class="LIB0000.FhBasicSettingsUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext = "{Binding RelativeSource={RelativeSource Self}}"
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d"
             d:DesignWidth="800">


    <Grid x:Name="gridMain" Grid.Row="0" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
                   Source="{Binding SelectedFhService.LastImage}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Grid x:Name="gridFooter" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <!--<Image Grid.Column="2" VerticalAlignment="Center" Source="pack://application:,,,/Assets/Images/EthernetOk.png" Width="60" Visibility="{Binding SelectedFhService.IsConnected,Converter={StaticResource ConverterBoolToVisibility1Visible0Hidden}}"/>
            <Image Grid.Column="2" VerticalAlignment="Center" Source="pack://application:,,,/Assets/Images/EthernetNok.png" Width="60" Visibility="{Binding SelectedFhService.IsConnected,Converter={StaticResource ConverterBoolToVisibility0Visible1Hidden}}"/>-->

            <local:ButtonImageUserControl Grid.Column="0" IsEnabled="False"
                        Button1Text="Connected"
                        Button1Image="pack://application:,,,/Assets/Images/Ethernet.png" 
                        Button1Visibility="{Binding SelectedFhService.IsConnected}"
                        Margin="0"
            />

            <local:ButtonImageUserControl Grid.Column="0" IsEnabled="False"
            Button1Text="Not Connected"
            Button1Image="pack://application:,,,/Assets/Images/Ethernet.png" 
            Button1Visibility="{Binding SelectedFhService.IsConnected, Converter={StaticResource ConverterBoolToInverseBool}}"
            Margin="0"
/>



            <local:ButtonImageUserControl Grid.Column="4"
                        Button1Text="Foto"
                        Button1Command="{Binding MeasureCommand}"
                        Button1Image="/Assets/Images/InstructionTypeSnapshot.png" 
                        Button1Visibility="True"
                        Margin="0"
            />


        </Grid>
    </Grid>
</UserControl>
