<UserControl x:Class="LIB0000.HalconSettingsUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d"
             d:DesignWidth="800">
    <Grid>

        <Grid x:Name="gridData" Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0"
                   Source="{Binding SelectedHalconService.LastImage}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">

                <Button Content="Autofocus" Margin="1,1,1,1" Command="{Binding ExecuteAutofocusCommand}"/>
                <Button Content="Neem foto" Margin="1,1,1,1" Command="{Binding MeasureCommand}"/>
                
                <Label Content="Connected:"/>
                <Label Content="{Binding SelectedHalconService.IsConnected}"/>

            </StackPanel>

            
        </Grid>
        

    </Grid>
</UserControl>
