<UserControl x:Class="LIB0000.FhViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded"
             x:Name="FhViewUserControlTop">
    
    <Grid x:Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        

        <Grid x:Name="gridImage" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Name="image1" Grid.Row="0" Source="{Binding SelectedFhService.LastImage,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            
        </Grid>

        <Grid x:Name="gridInfo" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <local:StatusBorderTextValueUserControl Grid.Row="1" Grid.Column="1" Color="{StaticResource ColorGray}" ColorText="White" TextTop="Laatst gelezen code" TextBottom="{Binding SelectedFhService.LastReadedBarCode,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Visibility="{Binding SelectedHardwareFunction,ElementName=FhViewUserControlTop, Converter={StaticResource ConverterHardWareFunctionToVisibilityFhv7BarcodeVisible}}"/>

            <local:StatusBorderTextValueUserControl Grid.Row="1" Grid.Column="1" Color="{StaticResource ColorGray}" ColorText="White" TextTop="Correlatie (%)" TextBottom="{Binding SelectedFhService.LastScore,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Visibility="{Binding SelectedHardwareFunction,ElementName=FhViewUserControlTop, Converter={StaticResource ConverterHardWareFunctionToVisibilityFhv7ShapeSearchVisible}}"/>

            <local:StatusBorderTextValueUserControl Grid.Row="2" Grid.Column="1" Color="{StaticResource ColorGray}" ColorText="White" TextTop="Hoek (°)" TextBottom="{Binding SelectedFhService.LastAngle,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Visibility="{Binding SelectedHardwareFunction,ElementName=FhViewUserControlTop, Converter={StaticResource ConverterHardWareFunctionToVisibilityFhv7ShapeSearchVisible}}"/>
        </Grid>
    </Grid>
</UserControl>
