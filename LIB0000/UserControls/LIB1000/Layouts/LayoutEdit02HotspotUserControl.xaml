<UserControl x:Class="LIB0000.LayoutEdit02HotspotUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIB0000"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FocusManager.FocusedElement="{Binding ElementName=InputText}">
    
    <Grid x:Name="GridMain" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="TextBlock1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding InstructionModel.Text1,RelativeSource={RelativeSource AncestorType=UserControl}}" Visibility="{Binding EditVisibilityMode, Converter={StaticResource ConverterVisibilityToInverseVisibility}, RelativeSource={RelativeSource AncestorType=UserControl}}"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

            <Label Content="{Binding InstructionModel.Text1,RelativeSource={RelativeSource AncestorType=UserControl}}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding EditVisibilityMode,RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Grid>

        <Grid x:Name="Image" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="Image1" Source="{Binding InstructionModel.Image1,RelativeSource={RelativeSource AncestorType=UserControl}}" IsEnabled="{Binding EditEnabledMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Stretch="Uniform" Grid.Column="1" Grid.Row="1" MouseDown="Change_Image" />

        </Grid>

        <Grid x:Name="TextBlock2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputText" Grid.Column="1" Grid.Row="0" Text="{Binding InstructionModel.InputText1,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding EditEnabledMode, Converter={StaticResource ConverterBoolToInverseBool}, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Stretch" Focusable="True">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding cmdInstructionOk, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

    </Grid>





</UserControl>
