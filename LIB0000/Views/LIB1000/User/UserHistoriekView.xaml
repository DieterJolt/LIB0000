<Page x:Class="LIB0000.UserHistoriekView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:LIB0000"
      mc:Ignorable="d" 
      DataContext = "{Binding RelativeSource={RelativeSource Self}}"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="UserHistoriekView">

    <Grid x:Name="gridMain" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Single Row -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!-- Start Datum / Tijd -->
            <StackPanel Grid.Row="1" Grid.Column="1"
        VerticalAlignment="Center">

                <TextBlock Text="Start :"  FontSize="{DynamicResource MediumFontSize}" Foreground="White" Margin="5,0,15,0"/>
                <DatePicker Width="{Binding ActualWidth, ElementName=Combobox}" Height="{Binding ActualHeight, ElementName=Combobox}" SelectedDate="{Binding BasicService.UsersService.History.SelectedStartDateFilter,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="{DynamicResource MediumFontSize}" >


                </DatePicker>

            </StackPanel>

            <!-- Stop Datum / Tijd -->
            <StackPanel Grid.Row="1" Grid.Column="3"
                VerticalAlignment="center">

                <TextBlock Text="{DynamicResource Einde}" FontSize="{DynamicResource MediumFontSize}" Foreground="White" Margin="5,0,15,0"/>
                <DatePicker Width="{Binding ActualWidth, ElementName=Combobox}" Height="{Binding ActualHeight, ElementName=Combobox}" SelectedDate="{Binding BasicService.UsersService.History.SelectedEndDateFilter,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="{DynamicResource MediumFontSize}">
                </DatePicker>

            </StackPanel>

            <!--Actie-->
            <StackPanel Grid.Row="0" Grid.Column="5" 
        VerticalAlignment="Center">

                <TextBlock Text="{DynamicResource Actie}" 
           Foreground="White"
           FontSize="{DynamicResource MediumFontSize}"/>

                <ComboBox x:Name="Combobox" Grid.Column="1" Grid.Row="1" FontSize="{DynamicResource MediumFontSize}"
                  ItemsSource="{Binding BasicService.UsersService.History.ListActionPlusAlles}"
                  SelectedItem="{Binding BasicService.UsersService.History.SelectedActionFilter }"
                  SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

            <!--Gebruiker-->
            <StackPanel Grid.Row="0" Grid.Column="1"
        VerticalAlignment="center">

                <TextBlock Text="{DynamicResource Gebruiker}" 
           Foreground="White"
           FontSize="{DynamicResource MediumFontSize}"/>

                <ComboBox Grid.Column="1" Grid.Row="1" FontSize="{DynamicResource MediumFontSize}"
                  ItemsSource="{Binding BasicService.UsersService.User.ListUsersPlusAlles}"
                  SelectedItem="{Binding BasicService.UsersService.History.SelectedUserFilter}"
                  SelectedIndex="0"
                  >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!--Level-->
            <StackPanel Grid.Row="0" Grid.Column="3"
                VerticalAlignment="Center">

                <TextBlock Text="{DynamicResource Niveau}" 
                   Foreground="White"
                    FontSize="{DynamicResource MediumFontSize}"/>

                <ComboBox Grid.Column="3" HorizontalAlignment="Stretch" 
                  ItemsSource="{Binding BasicService.UsersService.History.ListLevelsPlusAlles}" 
                  SelectedItem="{Binding BasicService.UsersService.History.SelectedLevelFilter}"
                  SelectedIndex="0"
                  >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

        </Grid>

        <Grid x:Name="gridDatagrid" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="1" HeadersVisibility="Column" MaxHeight="{Binding ActualHeight, ElementName=gridDatagrid}" ItemsSource="{Binding BasicService.UsersService.History.List,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                            AutoGenerateColumns="False" IsReadOnly="True" >

                <!-- Define columns -->
                <DataGrid.Columns>
                    <DataGridTextColumn Visibility="Hidden" Binding="{Binding Id }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="Id"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Visibility="Hidden" Binding="{Binding UserId }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="Id"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding User }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{DynamicResource TabelGebruiker}"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Level }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{DynamicResource TabelNiveau}"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Action }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{DynamicResource TabelActie}"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding DateTime }">
                        <DataGridTextColumn.Header>
                            <TextBlock FontSize="{DynamicResource MediumFontSize}" Text="{DynamicResource TabelDatum}"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                </DataGrid.Columns>

                <DataGrid.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="25" />
                    </Style>

                </DataGrid.Resources>

            </DataGrid>

        </Grid>

        <Grid Grid.Row="2">
            
            <!--empty row-->
            
        </Grid>

    </Grid>

</Page>
