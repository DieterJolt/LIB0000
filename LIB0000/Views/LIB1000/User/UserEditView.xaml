<Page x:Class="LIB0000.UserEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      DataContext = "{Binding RelativeSource={RelativeSource Self}}"
      xmlns:local="clr-namespace:LIB0000"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEditView">

    <Grid x:Name="gridMain" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridData" Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">

                <local:TextInputTextUserControl 
                  TextLeft="{DynamicResource Naam}"
                  Input="{Binding BasicService.UsersService.User.Edit.User, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  TextRight=""/>
                <local:ComboBoxInputUserControl 
                  TextLeft="{DynamicResource Niveau}"
                  ItemsSource="{Binding BasicService.UsersService.User.Levels, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding BasicService.UsersService.User.Edit.Level, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  TextRight=""/>
                <local:TextInputTextUserControl 
                  TextLeft="{DynamicResource Wachtwoord}"
                  Input="{Binding BasicService.UsersService.User.Edit.Password,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  TextRight="" 
                   />
                <local:TextCheckboxUserControl
                    TextLeft="{DynamicResource WachtwoordNodig}"
                    Checked="{Binding BasicService.UsersService.User.Edit.PasswordRequired,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextRight="" 
                    />
                <local:TextInputTextUserControl 
                    TextLeft="Security Group"
                    Input="{Binding BasicService.UsersService.User.Edit.Group,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextRight="" 
                    />

            </StackPanel>


        </Grid>



        <local:Footer5ButtonsUserControl VerticalAlignment="Center" Grid.Row="1"
                  
                  Button1Text="{DynamicResource Ok}"
                  Button1Image="pack://application:,,,/Assets/Images/Yes.png"
                  Button1Visibility="True"
                  Button1Command="{Binding cmdOkCommand}"
                  
                  Button2Text="{DynamicResource Annuleer}"
                  Button2Image="pack://application:,,,/Assets/Images/Delete.png"
                  Button2Visibility="True"
                  Button2Command="{Binding cmdCancelCommand}"
                                                                                                            
                  />


    </Grid>
</Page>
