<Page
    x:Class="LIB0000.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LIB0000"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:h="http://helix-toolkit.org/wpf"
    Title="AboutView" 
    d:DataContext="{d:DesignInstance local:AboutView,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800" Background="{StaticResource ColorDarkGray}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    Language="NL-BE">

    <StackPanel Margin="10" >


        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <Image VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1"  Source="pack://application:,,,/Assets/Images/LogoJolt.png"  />
            </Grid>

            <Grid Grid.Row="1">

            
        <ui:CardExpander Margin="0,0,0,0" >
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <ui:ImageIcon MaxWidth="80" MaxHeight="80" Grid.Column="0"  Source="pack://application:,,,/Assets/Images/LogoJoltIcon.png" />
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBlock
                    Foreground="White" FontSize="{DynamicResource SmallTitleFontSize}"
                    Grid.Row="0" Padding="10"
                    Grid.Column="0"
                    FontTypography="Body"
                    Text="{Binding GlobalService.ApplicatieTitel}" />
                        <ui:TextBlock
                    Foreground="White"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="10"
                    Text="2025 JOLT Software " />
                        <TextBlock
                    Grid.Row="0" FontSize="{DynamicResource SmallTitleFontSize}"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    Text="{Binding ViewModel.AppVersion, Mode=OneWay}" Foreground="White" />
                    </Grid>

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <Button  Grid.Row="0" Click="OperatorManualEvent" Background="Transparent" BorderBrush="Transparent">
                                <Grid x:Name="button01">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Image VerticalAlignment="Stretch" Margin="5" 
                                   HorizontalAlignment="Stretch"  Grid.Column="0"  
                                   Source="pack://application:,,,/Assets/Images/Pdf.png"/>
                                    <TextBlock Foreground="White" Grid.Column="1" 
                                       Text="Handleiding operator " FontSize="{DynamicResource LargeFontSize }" VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                            <Button Grid.Row="2" Click="ElektrischPlanEvent" Background="Transparent" BorderBrush="Transparent">
                                <Grid x:Name="button02" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Image VerticalAlignment="Stretch" Margin="5" 
                                   HorizontalAlignment="Stretch"  Grid.Column="0"
                                   Source="pack://application:,,,/Assets/Images/Pdf.png"/>
                                    <TextBlock Foreground="White" Grid.Column="1"
                                       Text="Elektrisch schema " FontSize="{DynamicResource LargeFontSize }" VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                            <Button Grid.Row="4" Click="WebsiteEvent" Background="Transparent" BorderBrush="Transparent">
                                <Grid x:Name="button03" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Image VerticalAlignment="Stretch" Margin="5" 
                                   HorizontalAlignment="Stretch"  Grid.Column="0"
                                   Source="pack://application:,,,/Assets/Images/Web.png"/>
                                    <TextBlock Foreground="White" Grid.Column="1"
                                       Text="Bezoek onze website " FontSize="{DynamicResource LargeFontSize }" VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                        </Grid>


            </StackPanel>
        </ui:CardExpander>
            </Grid>
        </Grid>
    </StackPanel>
</Page>
