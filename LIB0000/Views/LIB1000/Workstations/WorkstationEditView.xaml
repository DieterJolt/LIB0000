<Page x:Class="LIB0000.WorkstationEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      DataContext = "{Binding RelativeSource={RelativeSource Self}}"
      xmlns:local="clr-namespace:LIB0000"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkstationEditView" >



    <Grid x:Name="gridMain" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridData" Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">

                <local:TextInputTextUserControl 
                    TextLeft="{DynamicResource Naam}"
                    Input="{Binding BasicService.WorkstationsService.Workstations.Edit.Name,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextRight=""/>
                <local:TextInputTextUserControl 
                    TextLeft="{DynamicResource Beschrijving}"
                    Input="{Binding BasicService.WorkstationsService.Workstations.Edit.Description,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextRight=""/>
                <local:TextToggleUserControl
                    TextLeft="{DynamicResource Instructies}"
                    TextToggleOff="{DynamicResource Uit}"
                    TextToggleOn="{DynamicResource Aan}"
                    ToggleIsChecked="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListOn,Mode=TwoWay}"
                 />
                <local:TextInputClearButtonUserControl 
                Visibility="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListOn, Converter={StaticResource ConverterBoolToVisibility1Visible0Hidden}}" 
                TextLeft="{DynamicResource InstructielijstVoorOrder}"
                VisibilityRight="True" 
                CommandRight="{Binding cmdSelectBeforeCommand}"
                ImageRight="pack://application:,,,/Assets/Images/Instructions.png">

                    <local:TextInputClearButtonUserControl.Input>
                        <MultiBinding Converter="{StaticResource InstructionListIdToNameMultiConverter}" Mode="TwoWay">
                            <Binding Path="BasicService.WorkstationsService.Workstations.Edit.InstructionListIdBefore" />
                            <Binding Path="BasicService.InstructionsService.InstructionLists.List" />
                        </MultiBinding>
                    </local:TextInputClearButtonUserControl.Input>

                </local:TextInputClearButtonUserControl>
                <local:TextInputClearButtonUserControl Visibility="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListOn,Converter={StaticResource ConverterBoolToVisibility1Visible0Hidden}}" 
                    TextLeft="{DynamicResource InstructielijstTijdensOrder}"
                    VisibilityRight="True"
                    CommandRight="{Binding cmdSelectPeriodicCommand}"
                    ImageRight="pack://application:,,,/Assets/Images/Instructions.png">

                    <local:TextInputClearButtonUserControl.Input>
                        <MultiBinding Converter="{StaticResource InstructionListIdToNameMultiConverter}" Mode="TwoWay">
                            <Binding Path="BasicService.WorkstationsService.Workstations.Edit.InstructionListPeriodicIdBefore" />
                            <Binding Path="BasicService.InstructionsService.InstructionLists.List" />
                        </MultiBinding>
                    </local:TextInputClearButtonUserControl.Input>

                </local:TextInputClearButtonUserControl>
                <local:TextNumberTextUserControl Visibility="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListOn,Converter={StaticResource ConverterBoolToVisibility1Visible0Hidden}}" 
                    TextLeft="{DynamicResource Frequentie}" Input="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListPeriodicFrequency, Mode=TwoWay}"
                 />
                <local:TextInputClearButtonUserControl Visibility="{Binding BasicService.WorkstationsService.Workstations.Edit.InstructionListOn,Converter={StaticResource ConverterBoolToVisibility1Visible0Hidden}}" 
                    TextLeft="{DynamicResource InstructielijstNaOrder}"
                    VisibilityRight="True"
                    CommandRight="{Binding cmdSelectAfterCommand}"
                    ImageRight="pack://application:,,,/Assets/Images/Instructions.png">

                    <local:TextInputClearButtonUserControl.Input>
                        <MultiBinding Converter="{StaticResource InstructionListIdToNameMultiConverter}" Mode="TwoWay">
                            <Binding Path="BasicService.WorkstationsService.Workstations.Edit.InstructionListIdAfter" />
                            <Binding Path="BasicService.InstructionsService.InstructionLists.List" />
                        </MultiBinding>
                    </local:TextInputClearButtonUserControl.Input>

                </local:TextInputClearButtonUserControl>
            </StackPanel>

            <Image Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10"
                 Source="{Binding BasicService.WorkstationsService.Workstations.Edit.Image}"
                   MouseDown="Change_Image"
                Stretch="Uniform"/>

        </Grid>



        <local:Footer5ButtonsUserControl VerticalAlignment="Center" Grid.Row="1"
                    
                    Button1Text="{DynamicResource Ok}"
                    Button1Image="pack://application:,,,/Assets/Images/Yes.png"
                    Button1Visibility="True"
                    Button1Command="{Binding cmdOkCommand}"
                    
                    Button2Text="{DynamicResource Annuleer}"
                    Button2Image="pack://application:,,,/Assets/Images/Delete.png"
                    Button2Visibility="True"
                    Button2Command="{Binding cmdCancelCommand}"
                                                                                                              
                    />


    </Grid>

</Page>
