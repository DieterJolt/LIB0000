<Page x:Class="LIB0000.ProductDetail01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      DataContext = "{Binding RelativeSource={RelativeSource Self}}"
      xmlns:local="clr-namespace:LIB0000"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetail01">

    <Grid x:Name="gridMain">

        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridMiddle" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="gridLeft" Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="volgorde">

                    <TextBlock Grid.Row="1" Text="Product parameters" FontSize="20" HorizontalAlignment="Left" Margin="10" Foreground="White"/>

                    <local:ParameterUserControl x:Name="ProductAmount"
            
                     ParameterName="Hoeveelheid:" 
                     ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     ParameterUnitText="stuks"
                     MinValue="1" MaxValue="10000" 
                     StepValue="1" 
                     StepBigValue="1" 
                     StepBigTime="250"
                     PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <local:ParameterUserControl x:Name="ProductDiameter"
                                            
                     ParameterName="Product diameter:" ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Diameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     ParameterUnitText="mm"
                     MinValue="1" MaxValue="250" 
                     StepValue="1" 
                     StepBigValue="1"
                     StepBigTime="250"
                     PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <local:ParameterUserControl x:Name="ProductLenght"
            
                     ParameterName="Product lengte:" ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Length, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     ParameterUnitText="mm"
                     MinValue="1" MaxValue="250" 
                     StepValue="1" 
                     StepBigValue="1" 
                     StepBigTime="250"
                     PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <local:ParameterUserControl x:Name="ProductWidth" Visibility="Collapsed"
            
                    ParameterName="Product breedte:" ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    ParameterUnitText="mm"
                    MinValue="1" MaxValue="250" 
                    StepValue="1" 
                    StepBigValue="1" 
                    StepBigTime="250"
                    PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <local:ParameterUserControl x:Name="ProductHeight"
            
                     ParameterName="Product hoogte:" ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     ParameterUnitText="mm"
                     MinValue="1" MaxValue="250" 
                     StepValue="1" 
                     StepBigValue="1" 
                     StepBigTime="250"
                     PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <local:ParameterUserControl x:Name="ProductWeight"
            
                     ParameterName="Product gewicht:"
                     ParameterValue="{Binding BasicService.ProductsService.ProductStructure.Edit.Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ParameterUnitText="g"
                     MinValue="1" MaxValue="250" 
                     StepValue="1" 
                     StepBigValue="1" 
                     StepBigTime="250"
                     PreviewMouseLeftButtonDown="ParameterUserControl_PreviewMouseLeftButtonDown"
                    />

                    <Grid x:Name="ProductTotalWeight">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18*"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="165"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Margin="10,0,10,0" Content="Totaal gewicht" 
                Foreground="White"  VerticalAlignment="Center" Grid.ColumnSpan="2" />
                        <TextBox Grid.Column="2" MinWidth="75" MaxWidth="185" IsReadOnly="True" IsEnabled="False" Text="{Binding BasicService.ProductsService.ProductStructure.Edit.TotalWeight, UpdateSourceTrigger=PropertyChanged}" 
            Foreground="White"  VerticalAlignment="Center" Margin="10,10,10,10" />
                        <Label Grid.Column="3" Content="g"
                Foreground="White"  VerticalAlignment="Center" HorizontalAlignment="Left" />
                    </Grid>

                </StackPanel>


            </Grid>

            <Grid x:Name="GridRight" Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Product" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>

                <Image x:Name="ImageBlister" 
                    Grid.Row="1"        
                       Source="/Assets/Images/VoorbeeldAfbeelding.png"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"  
                    Width="700" 
                    Height="700" 
                    Visibility="Visible">

                </Image>

            </Grid>



        </Grid>

        <Grid x:Name="gridFooter" Grid.Row="2" Margin="0,0,20,0">

            <local:Footer5ButtonsUserControl x:Name="Footer" VerticalAlignment="Center"
        Button5Text="Bewaren"
        Button5Image="/Assets/Images/SaveAs.png" 
        Button5Visibility="True"
                                                 Button5TextColor="White"
        Button5Command="{Binding cmdSaveCommand}"
        />

        </Grid>


    </Grid>
</Page>
